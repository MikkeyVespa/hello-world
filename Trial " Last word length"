// BEGIN (write your solution here)
const getLastWordLength = (str) => {
  if (str.length === 0) {
    return 0;
  }
  const lastPathstr = str.trim().split(' ');
  return lastPathstr[lastPathstr.length - 1].length;
};

export default getLastWordLength;
// END


