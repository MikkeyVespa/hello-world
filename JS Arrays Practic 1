my decision

export const getWeekends = string => string === 'short' ? ['sat', 'sun'] : ['saturday', 'sunday'];

teacher's decision

export const getWeekends = (format) => {
  const longFormat = ['saturday', 'sunday'];
  const shortFormat = ['sat', 'sun'];

  switch (format) {
    case 'long':
      return longFormat;
    case 'short':
      return shortFormat;
    default:
      return longFormat;
  }
};
